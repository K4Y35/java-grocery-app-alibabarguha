<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="16dp">


            <ImageView
                android:id="@+id/toggle_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_custom_drawer_toggle" />




            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="114dp"
                android:layout_height="55dp"
                android:layout_alignTop="@id/toggle_icon"
                android:layout_marginStart="40dp"
                android:layout_marginTop="-20dp"
                android:layout_toEndOf="@id/toggle_icon"
                android:scaleType="centerCrop"
                android:src="@drawable/logotransparent" />

            <ImageView
                android:id="@+id/cart_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/cartblack"
                android:layout_marginEnd="4dp"
                android:padding="8dp"
                android:contentDescription="Cart Icon" />


            <ImageView
                android:id="@+id/search_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toStartOf="@id/cart_icon"
                android:layout_marginEnd="16dp"
                android:layout_centerVertical="true"
                android:src="@drawable/searchicon"
                android:padding="8dp"
                android:contentDescription="Search Icon" />

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@id/custom_toolbar"
        android:background="@drawable/shadow_background" />

</RelativeLayout>
